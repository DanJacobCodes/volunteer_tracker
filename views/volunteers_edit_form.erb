<h1>Edit Volunteer!</h1>

<p>Volunteer First Name: <%= @volunteer.first_name() %></p>

<p>Last Name: <%= @volunteer.last_name() %></p>

<form action="/volunteers/<%=@volunteer.id() %> " method="post">
  <input name="_method" type="hidden" value = "patch">

  <label for="first_name">New First Name:</label>
  <input type="text" name="first_name" id="first_name">
  <label for="last_name">New Last Name:</label>
  <input type="text" name="last_name" id="last_name">

  <button type="submit">Make Changes</button>
</form>

<form action="/volunteers/<%=@volunteer.id() %> " method="post">
  <input name="_method" type="hidden" value = "delete">
   <button type="submit">Delete Book</button>
</form>


